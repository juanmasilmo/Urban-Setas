{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "lib": [
        "ESNext"
      ],
      "strict": false,
      "sourceMap": true,
      "esModuleInterop": true,
      "declaration": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "typeRoots": [
        "node_modules/@types"
      ],
      "types": [
        "node"
      ]
    },
    "include": [
      "src/**/*.ts"
    ]
  }
  